
@{
}
@model Purchase

<h2>Check out!</h2>
<p>Please fill out the form below to complete your purchase.</p>

<form method="post" asp-controller="Purchase" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- displays validation errors -->
    <h4>Ship To</h4>

    <div class="form-group">
        <label asp-for="Name">Name: </label><input asp-for="Name" class="form-control" /> <!-- form field for Name -->
    </div>

    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label><input asp-for="AddressLine1" class="form-control" /> <!-- form field for AddressLine1 -->
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label><input asp-for="AddressLine2" class="form-control" /> <!-- form field for AddressLine2 -->
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label><input asp-for="AddressLine3" class="form-control" /> <!-- form field for AddressLine3 -->
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label><input asp-for="City" class="form-control" /> <!-- form field for City -->
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label><input asp-for="State" class="form-control" /> <!-- form field for State -->
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip:</label><input asp-for="Zip" class="form-control" /> <!-- form field for Zip -->
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label><input asp-for="Country" class="form-control" /> <!-- form field for Country -->
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label><input asp-for="Email" class="form-control" /> <!-- form field for Email -->
    </div>
    <div class="float-end"><input class="btn btn-primary" type="submit" value="Complete Purchase" /></div> <!-- submit button -->

</form>