@{
}
@model Basket

<div class="">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b> @*// Display the header text for the cart section*@
            @Model.Items.Sum(x => x.Quantity) item(s) @*// Display the total number of items in the cart*@
            @Model.CalculateTotal().ToString("c") @*// Display the total cost of items in the cart*@
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-controller="Purchase" asp-action="Checkout"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        @*// Create a button to initiate the checkout process and redirect to the Purchase controller*@
        @*// Also pass along the current page's URL in case the user needs to come back*@
        <i class="fa fa-shopping-cart"></i> @*// Add an icon to the button*@
    </a>
</div>