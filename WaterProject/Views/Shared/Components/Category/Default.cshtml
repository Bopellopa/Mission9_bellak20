
@{
}
@*links to different book categories*@
@model IEnumerable<string>

@*bootstrap makes it so buttons are highlighted when hovered over and blue when selected*@
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
    <br />
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1" class=" btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
        <br />
    }
</div>